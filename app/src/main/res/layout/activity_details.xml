<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".details.DetailsActivity">

    <ImageView
        android:id="@+id/sandwich_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sandwich_iv"
        android:orientation="vertical">

        <TextView
            style="@style/headerTextStyle"
            android:text="Also Known As"></TextView>

        <TextView
            android:id="@+id/alsoKnownAs_tv"
            style="@style/contentTextStyle"
            android:text="Also Known As"></TextView>

        <TextView
            style="@style/headerTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"></TextView>

        <TextView
            android:id="@+id/ingredients_tv"
            style="@style/contentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"></TextView>


        <TextView
            style="@style/headerTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Of Origin"></TextView>

        <TextView
            android:id="@+id/placeOfOrigin_tv"
            style="@style/contentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="place Of Origin "></TextView>

        <TextView
            style="@style/headerTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"></TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/description_tv"
                style="@style/contentTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"></TextView>

        </ScrollView>


    </LinearLayout>


</RelativeLayout>